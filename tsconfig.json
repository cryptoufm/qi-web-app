{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@abi/*": [
        "assets/contracts/*"
      ],
      "@service/*": [
        "app/@service/*"
      ],
      "@pipe/*": [
        "app/@pipe/*"
      ],
      "@factory/*": [
        "app/@factory/*"
      ],
      "@contract/*": [
        "app/@contract/*"
      ]
    }
  }
}